@model CarPartsSystem.Models.Promotion
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Promotions" asp-action="Index">Promotions</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" class="card-img-top" alt="@Model.Title" style="max-height: 400px; object-fit: cover;" />
                }
                else
                {
                    <div class="card-img-top bg-gradient" style="height: 300px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
                        <div class="text-center text-white">
                            <i class="fas fa-percentage fa-5x mb-3"></i>
                            <h1>@Model.DiscountPercentage%</h1>
                            <h3>OFF</h3>
                        </div>
                    </div>
                }
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h1 class="display-6">@Model.Title</h1>
                        <span class="badge bg-danger fs-4">-@Model.DiscountPercentage%</span>
                    </div>

                    <p class="lead">@Model.Description</p>

                    <hr />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <h5><i class="fas fa-calendar-alt text-primary"></i> Valid Period</h5>
                            <p class="mb-0">
                                <strong>Start:</strong> @Model.StartDate.ToString("MMMM dd, yyyy")<br />
                                <strong>End:</strong> @Model.EndDate.ToString("MMMM dd, yyyy")
                            </p>
                        </div>
                        <div class="col-md-6">
                            @if (Model.MinimumPurchaseAmount.HasValue)
                            {
                                <h5><i class="fas fa-shopping-cart text-primary"></i> Minimum Purchase</h5>
                                <p class="mb-0">à¸¿@Model.MinimumPurchaseAmount.Value.ToString("N2")</p>
                            }
                            else
                            {
                                <h5><i class="fas fa-check-circle text-success"></i> No Minimum Purchase</h5>
                                <p class="mb-0">This promotion applies to all purchases</p>
                            }
                        </div>
                    </div>

                    @if (Model.EndDate >= DateTime.Now)
                    {
                        <div class="alert alert-success">
                            <i class="fas fa-check-circle"></i> <strong>This promotion is currently active!</strong>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-controller="Parts" asp-action="Index" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-bag"></i> Shop Now
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle"></i> This promotion has expired.
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Promotions
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
