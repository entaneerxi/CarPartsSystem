@model IEnumerable<CarPartsSystem.Models.Promotion>
@{
    ViewData["Title"] = "Promotions";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4"><i class="fas fa-tag"></i> Current Promotions</h1>
            <p class="lead">Check out our latest deals and special offers!</p>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var promotion in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100 shadow">
                        @if (!string.IsNullOrEmpty(promotion.ImagePath))
                        {
                            <img src="@promotion.ImagePath" class="card-img-top" alt="@promotion.Title" style="height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top bg-gradient" style="height: 300px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
                                <div class="text-center text-white">
                                    <i class="fas fa-percentage fa-5x mb-3"></i>
                                    <h2>@promotion.DiscountPercentage%</h2>
                                    <p>OFF</p>
                                </div>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h4 class="card-title">@promotion.Title</h4>
                                <span class="badge bg-danger fs-5">-@promotion.DiscountPercentage%</span>
                            </div>
                            <p class="card-text">@promotion.Description</p>
                            
                            @if (promotion.MinimumPurchaseAmount.HasValue)
                            {
                                <p class="text-muted">
                                    <i class="fas fa-info-circle"></i> 
                                    Minimum purchase: à¸¿@promotion.MinimumPurchaseAmount.Value.ToString("N2")
                                </p>
                            }
                            
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> 
                                    Valid until @promotion.EndDate.ToString("MMM dd, yyyy")
                                </small>
                                <a asp-action="Details" asp-route-id="@promotion.PromotionId" class="btn btn-primary">
                                    <i class="fas fa-info-circle"></i> Details
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No active promotions</h4>
                    <p>Check back later for new deals and special offers!</p>
                </div>
            </div>
        }
    </div>
</div>
