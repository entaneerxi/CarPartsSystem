@model CarPartsSystem.Models.Promotion
@{
    ViewData["Title"] = "Delete Promotion";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-trash"></i> Delete Promotion</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this promotion?</h4>
                    <hr />
                    
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.ImagePath" alt="@Model.Title" class="img-thumbnail" style="max-width: 300px;" />
                        </div>
                    }

                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>
                        
                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                        
                        <dt class="col-sm-4">Discount</dt>
                        <dd class="col-sm-8"><span class="badge bg-danger">-@Model.DiscountPercentage%</span></dd>
                        
                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("MMMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("MMMM dd, yyyy")</dd>
                        
                        <dt class="col-sm-4">Min Purchase</dt>
                        <dd class="col-sm-8">
                            @if (Model.MinimumPurchaseAmount.HasValue)
                            {
                                <text>à¸¿@Model.MinimumPurchaseAmount.Value.ToString("N2")</text>
                            }
                            else
                            {
                                <text>No minimum</text>
                            }
                        </dd>
                        
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactive</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PromotionId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
