@model IEnumerable<CarPartsSystem.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    var total = Model.Sum(item => item.Part.Price * item.Quantity);
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-shopping-cart"></i> Shopping Cart</h1>

    @if (Model.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model)
                        {
                            <div class="row mb-3 pb-3 border-bottom align-items-center">
                                <div class="col-md-2">
                                    @if (!string.IsNullOrEmpty(item.Part.ImagePath))
                                    {
                                        <img src="@item.Part.ImagePath" class="img-fluid rounded" alt="@item.Part.PartName" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                            <i class="fas fa-cog fa-2x text-white-50"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-4">
                                    <h5>@item.Part.PartName</h5>
                                    <p class="text-muted mb-0">@item.Part.Brand</p>
                                    <small class="text-muted">Stock: @item.Part.StockQuantity</small>
                                </div>
                                <div class="col-md-2">
                                    <h6 class="text-primary">฿@item.Part.Price.ToString("N2")</h6>
                                </div>
                                <div class="col-md-2">
                                    <input type="number" class="form-control quantity-input" 
                                           data-cart-item-id="@item.CartItemId" 
                                           value="@item.Quantity" 
                                           min="1" 
                                           max="@item.Part.StockQuantity" />
                                </div>
                                <div class="col-md-2">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <strong>฿@((item.Part.Price * item.Quantity).ToString("N2"))</strong>
                                        <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Remove this item?');">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <div class="mt-3">
                    <form asp-action="ClearCart" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger" onclick="return confirm('Clear all items from cart?');">
                            <i class="fas fa-trash-alt"></i> Clear Cart
                        </button>
                    </form>
                    <a asp-controller="Parts" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Continue Shopping
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Subtotal:</span>
                            <strong>฿@total.ToString("N2")</strong>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tax (7%):</span>
                            <strong>฿@((total * 0.07m).ToString("N2"))</strong>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between mb-3">
                            <h5>Total:</h5>
                            <h5 class="text-primary">฿@((total * 1.07m).ToString("N2"))</h5>
                        </div>
                        <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary w-100 btn-lg">
                            <i class="fas fa-credit-card"></i> Proceed to Checkout
                        </a>
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-body">
                        <h6><i class="fas fa-shield-alt"></i> Secure Checkout</h6>
                        <p class="small text-muted mb-0">Your payment information is secure and encrypted.</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
            <h3>Your cart is empty</h3>
            <p class="text-muted">Add some items to your cart to get started!</p>
            <a asp-controller="Parts" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Browse Parts
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.quantity-input').change(function() {
                var cartItemId = $(this).data('cart-item-id');
                var quantity = $(this).val();
                
                $.ajax({
                    url: '/Cart/UpdateQuantity',
                    type: 'POST',
                    data: { 
                        cartItemId: cartItemId,
                        quantity: quantity,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: response.message
                            });
                        }
                    }
                });
            });
        });
    </script>
}
