@model IEnumerable<CarPartsSystem.Models.Gallery>
@{
    ViewData["Title"] = "Gallery";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-4"><i class="fas fa-images"></i> Gallery</h1>
            <p class="lead">Browse our collection of car parts and services</p>
        </div>
    </div>

    <div class="row">
        @if (Model.Any())
        {
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="gallery-item card h-100 shadow">
                        <img src="@item.ImagePath" class="card-img-top" alt="@item.Title" />
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <p class="card-text">@item.Description</p>
                            }
                            <small class="text-muted">
                                <i class="fas fa-calendar"></i> @item.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    <i class="fas fa-images fa-3x mb-3"></i>
                    <h4>No images in gallery</h4>
                    <p>Gallery images will be displayed here.</p>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Image modal for gallery
        $('.gallery-item img').click(function() {
            var imgSrc = $(this).attr('src');
            var imgAlt = $(this).attr('alt');
            
            Swal.fire({
                imageUrl: imgSrc,
                imageAlt: imgAlt,
                showCloseButton: true,
                showConfirmButton: false,
                width: '80%'
            });
        });
    </script>
}
