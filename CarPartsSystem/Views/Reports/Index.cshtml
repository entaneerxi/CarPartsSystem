@{
    ViewData["Title"] = "Reports Dashboard";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-5"><i class="fas fa-chart-bar"></i> Reports Dashboard</h1>
            <p class="lead">View sales reports and analytics</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-chart-line fa-5x text-primary mb-4"></i>
                    <h3>Sales Report</h3>
                    <p class="text-muted">View detailed sales reports by date range and analyze sales performance</p>
                    <a asp-action="SalesReport" class="btn btn-primary btn-lg">
                        <i class="fas fa-arrow-right"></i> View Sales Report
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-body text-center">
                    <i class="fas fa-users fa-5x text-success mb-4"></i>
                    <h3>Staff Sales Report</h3>
                    <p class="text-muted">View sales performance by staff members and track individual contributions</p>
                    <a asp-action="StaffSalesReport" class="btn btn-success btn-lg">
                        <i class="fas fa-arrow-right"></i> View Staff Report
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0"><i class="fas fa-info-circle"></i> Quick Stats</h4>
                </div>
                <div class="card-body">
                    <p>Use the reports above to:</p>
                    <ul>
                        <li>Track sales performance over time</li>
                        <li>Analyze revenue trends</li>
                        <li>Monitor staff sales contributions</li>
                        <li>Generate reports for specific date ranges</li>
                        <li>Export data for further analysis</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
