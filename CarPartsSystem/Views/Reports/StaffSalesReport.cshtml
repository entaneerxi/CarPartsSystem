@model dynamic
@{
    ViewData["Title"] = "Staff Sales Report";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1><i class="fas fa-users"></i> Staff Sales Report</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Reports
            </a>
        </div>
    </div>

    <!-- Filter Form -->
    <div class="card shadow mb-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-filter"></i> Filter Options</h4>
        </div>
        <div class="card-body">
            <form asp-action="StaffSalesReport" method="get">
                <div class="row">
                    <div class="col-md-5 mb-3">
                        <label class="form-label">Start Date</label>
                        <input type="date" name="startDate" class="form-control" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-5 mb-3">
                        <label class="form-label">End Date</label>
                        <input type="date" name="endDate" class="form-control" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-2 mb-3">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Generate
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Staff Sales Data -->
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0"><i class="fas fa-chart-bar"></i> Staff Performance</h4>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Count > 0)
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Staff Member</th>
                                <th>Email</th>
                                <th>Total Orders</th>
                                <th>Total Sales</th>
                                <th>Average Order Value</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var staff in Model)
                            {
                                var avgOrderValue = staff.OrderCount > 0 ? staff.TotalSales / staff.OrderCount : 0;
                                <tr>
                                    <td>
                                        <strong>@staff.FirstName @staff.LastName</strong>
                                    </td>
                                    <td>@staff.Email</td>
                                    <td>
                                        <span class="badge bg-info">@staff.OrderCount</span>
                                    </td>
                                    <td>
                                        <strong class="text-success">฿@staff.TotalSales.ToString("N2")</strong>
                                    </td>
                                    <td>
                                        ฿@avgOrderValue.ToString("N2")
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            @{
                                var totalOrders = 0;
                                var totalSales = 0m;
                                foreach (var staff in Model)
                                {
                                    totalOrders += staff.OrderCount;
                                    totalSales += staff.TotalSales;
                                }
                            }
                            <tr>
                                <td colspan="2" class="text-end"><strong>Total:</strong></td>
                                <td><strong>@totalOrders</strong></td>
                                <td colspan="2"><strong class="text-success">฿@totalSales.ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>

                <!-- Performance Chart Placeholder -->
                <div class="mt-4">
                    <h5><i class="fas fa-chart-pie"></i> Performance Overview</h5>
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> Performance visualization can be added here using Chart.js or similar library
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No staff sales data found</h4>
                    <p>There are no completed orders by staff for the selected date range.</p>
                </div>
            }
        </div>
    </div>
</div>
