@model IEnumerable<CarPartsSystem.Models.Gallery>
@{
    ViewData["Title"] = "Manage Gallery";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1><i class="fas fa-images"></i> Manage Gallery</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Image
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var gallery in Model)
            {
                <div class="col-md-4 col-lg-3 mb-4">
                    <div class="card shadow h-100">
                        @if (!string.IsNullOrEmpty(gallery.ImagePath))
                        {
                            <img src="@gallery.ImagePath" class="card-img-top" alt="@gallery.Title" style="height: 200px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 200px;">
                                <i class="fas fa-image fa-3x text-white-50"></i>
                            </div>
                        }
                        <div class="card-body">
                            <h5 class="card-title">@gallery.Title</h5>
                            <p class="card-text">@gallery.Description</p>
                            <p class="text-muted small">
                                <i class="fas fa-sort"></i> Display Order: @gallery.DisplayOrder
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <div class="d-grid gap-2">
                                <a asp-action="Delete" asp-route-id="@gallery.GalleryId" class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card shadow">
            <div class="card-body">
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>No gallery images found</h4>
                    <p>Add your first image to get started.</p>
                </div>
            </div>
        </div>
    }
</div>
