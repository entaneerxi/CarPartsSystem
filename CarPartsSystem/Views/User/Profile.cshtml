@model CarPartsSystem.Models.ApplicationUser
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-user-circle"></i> My Profile</h1>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                    {
                        <img src="@Model.ProfileImagePath" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;" alt="Profile Image" />
                    }
                    else
                    {
                        <div class="bg-primary rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                            <i class="fas fa-user fa-5x text-white"></i>
                        </div>
                    }
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>
                    <p class="small text-muted">Member since: @Model.CreatedAt.ToString("MMMM yyyy")</p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-info-circle"></i> Personal Information</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>First Name</strong></label>
                            <p class="form-control-plaintext">@(Model.FirstName ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>Last Name</strong></label>
                            <p class="form-control-plaintext">@(Model.LastName ?? "N/A")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>Email</strong></label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>Phone Number</strong></label>
                            <p class="form-control-plaintext">@(Model.PhoneNumber ?? "N/A")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <label class="form-label text-muted"><strong>Address</strong></label>
                            <p class="form-control-plaintext">@(Model.Address ?? "N/A")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>Username</strong></label>
                            <p class="form-control-plaintext">@Model.UserName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted"><strong>Member Since</strong></label>
                            <p class="form-control-plaintext">@Model.CreatedAt.ToString("dd MMMM yyyy")</p>
                        </div>
                    </div>

                    <hr />

                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i> <strong>Note:</strong> To update your profile information, please contact our support team.
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-secondary text-white">
                    <h4 class="mb-0"><i class="fas fa-key"></i> Account Actions</h4>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="User" asp-action="Dashboard" class="btn btn-outline-primary">
                            <i class="fas fa-dashboard"></i> Go to Dashboard
                        </a>
                        <a asp-controller="User" asp-action="PurchaseHistory" class="btn btn-outline-primary">
                            <i class="fas fa-history"></i> View Purchase History
                        </a>
                        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary">
                            <i class="fas fa-shopping-cart"></i> View Shopping Cart
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
