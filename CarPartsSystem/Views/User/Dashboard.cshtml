@{
    ViewData["Title"] = "Dashboard";
    var user = ViewBag.User as CarPartsSystem.Models.ApplicationUser;
    var totalOrders = ViewBag.TotalOrders as int? ?? 0;
    var totalSpent = ViewBag.TotalSpent as decimal? ?? 0m;
    var pendingOrders = ViewBag.PendingOrders as int? ?? 0;
    var recentOrders = ViewBag.RecentOrders as List<CarPartsSystem.Models.Purchase>;
}

<div class="container mt-4">
    <h1 class="mb-4"><i class="fas fa-dashboard"></i> Dashboard</h1>

    <!-- Welcome Message -->
    <div class="alert alert-info">
        <h4><i class="fas fa-user-circle"></i> Welcome back, @user?.FirstName @user?.LastName!</h4>
        <p class="mb-0">Here's an overview of your account activity.</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-bag fa-3x text-primary mb-3"></i>
                    <h3 class="text-primary">@totalOrders</h3>
                    <p class="text-muted mb-0">Total Orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <i class="fas fa-dollar-sign fa-3x text-success mb-3"></i>
                    <h3 class="text-success">฿@totalSpent.ToString("N2")</h3>
                    <p class="text-muted mb-0">Total Spent</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <i class="fas fa-clock fa-3x text-warning mb-3"></i>
                    <h3 class="text-warning">@pendingOrders</h3>
                    <p class="text-muted mb-0">Pending Orders</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <h3><i class="fas fa-bolt"></i> Quick Actions</h3>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Parts" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                <i class="fas fa-shopping-cart fa-2x d-block mb-2"></i>
                Shop Parts
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="User" asp-action="PurchaseHistory" class="btn btn-outline-primary w-100 py-3">
                <i class="fas fa-history fa-2x d-block mb-2"></i>
                Order History
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="User" asp-action="Profile" class="btn btn-outline-primary w-100 py-3">
                <i class="fas fa-user-circle fa-2x d-block mb-2"></i>
                My Profile
            </a>
        </div>
        <div class="col-md-3 mb-3">
            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-primary w-100 py-3">
                <i class="fas fa-shopping-cart fa-2x d-block mb-2"></i>
                View Cart
            </a>
        </div>
    </div>

    <!-- Recent Orders -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-list"></i> Recent Orders</h4>
        </div>
        <div class="card-body">
            @if (recentOrders != null && recentOrders.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Order #</th>
                                <th>Date</th>
                                <th>Items</th>
                                <th>Total</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in recentOrders)
                            {
                                <tr>
                                    <td><strong>#@order.PurchaseId</strong></td>
                                    <td>@order.PurchaseDate.ToString("dd/MM/yyyy")</td>
                                    <td>@order.PurchaseItems.Count item(s)</td>
                                    <td class="text-primary"><strong>฿@order.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (order.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">@order.Status</span>
                                        }
                                        else if (order.Status == "Confirmed")
                                        {
                                            <span class="badge bg-info">@order.Status</span>
                                        }
                                        else if (order.Status == "Completed")
                                        {
                                            <span class="badge bg-success">@order.Status</span>
                                        }
                                        else if (order.Status == "Cancelled")
                                        {
                                            <span class="badge bg-danger">@order.Status</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-controller="User" asp-action="PurchaseHistory" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="User" asp-action="PurchaseHistory" class="btn btn-primary">
                        <i class="fas fa-history"></i> View All Orders
                    </a>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h4>No orders yet</h4>
                    <p class="text-muted">Start shopping to see your orders here!</p>
                    <a asp-controller="Parts" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-shopping-bag"></i> Browse Parts
                    </a>
                </div>
            }
        </div>
    </div>
</div>
