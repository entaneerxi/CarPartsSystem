@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">@ViewData["Title"]</h2>
                </div>
                <div class="card-body text-center">
                    <i class="fas fa-lock fa-5x text-danger mb-4"></i>
                    <h4>You do not have permission to access this page.</h4>
                    <p class="text-muted">Please contact the administrator if you believe this is an error.</p>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">Go to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
