@model IEnumerable<CarPartsSystem.Models.Part>
@{
    ViewData["Title"] = "Manage Parts";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-6">
            <h1><i class="fas fa-cogs"></i> Manage Parts</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Part
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Brand</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var part in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(part.ImagePath))
                                    {
                                        <img src="@part.ImagePath" alt="@part.PartName" style="width: 50px; height: 50px; object-fit: cover;" class="rounded" />
                                    }
                                    else
                                    {
                                        <div class="bg-secondary rounded d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                            <i class="fas fa-cog text-white"></i>
                                        </div>
                                    }
                                </td>
                                <td>@part.PartName</td>
                                <td>@part.Category</td>
                                <td>@part.Brand</td>
                                <td>à¸¿@part.Price.ToString("N2")</td>
                                <td>@part.StockQuantity</td>
                                <td>
                                    @if (part.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="table-actions">
                                    <a asp-action="Edit" asp-route-id="@part.PartId" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@part.PartId" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
