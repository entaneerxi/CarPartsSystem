@model CarPartsSystem.Models.Part
@{
    ViewData["Title"] = "Edit Part";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-warning">
                    <h3 class="mb-0"><i class="fas fa-edit"></i> Edit Part</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post" enctype="multipart/form-data">
                        <input type="hidden" asp-for="PartId" />
                        <input type="hidden" asp-for="ImagePath" />
                        <input type="hidden" asp-for="CreatedAt" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="PartName" class="form-label"></label>
                            <input asp-for="PartName" class="form-control" />
                            <span asp-validation-for="PartName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category" class="form-label"></label>
                                <input asp-for="Category" class="form-control" />
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Brand" class="form-label"></label>
                                <input asp-for="Brand" class="form-control" />
                                <span asp-validation-for="Brand" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StockQuantity" class="form-label"></label>
                                <input asp-for="StockQuantity" class="form-control" />
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ImagePath))
                        {
                            <div class="mb-3">
                                <label class="form-label">Current Image</label>
                                <div>
                                    <img src="@Model.ImagePath" alt="@Model.PartName" class="img-thumbnail" style="max-width: 200px;" />
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label class="form-label">Change Image</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*" />
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-warning">
                                <i class="fas fa-save"></i> Update Part
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
