@model CarPartsSystem.Models.Part
@{
    ViewData["Title"] = "Delete Part";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0"><i class="fas fa-trash"></i> Delete Part</h3>
                </div>
                <div class="card-body">
                    <h4 class="text-danger">Are you sure you want to delete this part?</h4>
                    <hr />
                    
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.PartName</dd>
                        
                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Model.Category</dd>
                        
                        <dt class="col-sm-4">Brand</dt>
                        <dd class="col-sm-8">@Model.Brand</dd>
                        
                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">à¸¿@Model.Price.ToString("N2")</dd>
                        
                        <dt class="col-sm-4">Stock</dt>
                        <dd class="col-sm-8">@Model.StockQuantity</dd>
                    </dl>

                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="text-center mb-3">
                            <img src="@Model.ImagePath" alt="@Model.PartName" class="img-thumbnail" style="max-width: 200px;" />
                        </div>
                    }

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="PartId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
